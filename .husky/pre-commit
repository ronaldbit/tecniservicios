# Colors
GREEN="\033[32m"
BLUE="\033[34m"
YELLOW="\033[33m"
RED="\033[31m"
BOLD="\033[1m"
RESET="\033[0m"

# Header
printf "\n${BLUE}╔════════════════════════════════════╗${RESET}\n"
printf "${BLUE}║${RESET}   ✨ ${BOLD}Ejecutando Spotless...${RESET}         ${BLUE}║${RESET}\n"
printf "${BLUE}╚════════════════════════════════════╝${RESET}\n\n"

# Spotless execution
if mvn spotless:apply; then
  printf "\n${GREEN}✅ Código formateado correctamente.${RESET}\n"
else
  printf "\n${RED}❌ Error al ejecutar Spotless.${RESET}\n"
  exit 1
fi

# Add the changes to the commit
git add .

printf "\n${YELLOW}📦 Archivos formateados añadidos al staging.${RESET}\n"
printf "\n${GREEN}✨ Todo listo para hacer commit.${RESET}\n\n"