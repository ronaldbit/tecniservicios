# Colors
GREEN="\e[32m"
BLUE="\e[34m"
YELLOW="\e[33m"
RED="\e[31m"
BOLD="\e[1m"
RESET="\e[0m"

# Header
echo -e "\n${BLUE}╔════════════════════════════════════╗${RESET}"
echo -e "${BLUE}║${RESET}   ✨ ${BOLD}Ejecutando Spotless...${RESET}         ${BLUE}║${RESET}"
echo -e "${BLUE}╚════════════════════════════════════╝${RESET}\n"

# Spotless execution
if mvn spotless:apply; then
  echo -e "\n${GREEN}✅ Código formateado correctamente.${RESET}"
else
  echo -e "\n${RED}❌ Error al ejecutar Spotless.${RESET}"
  exit 1
fi

# Add the changes to the commit
git add .

echo -e "\n${YELLOW}📦 Archivos formateados añadidos al staging.${RESET}\n"
echo -e "${GREEN}✨ Todo listo para hacer commit.${RESET}\n"
