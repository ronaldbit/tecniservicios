root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 2

[*.java]
indent_size = 4
continuation_indent_size = 8
max_line_length = 120
insert_final_newline = true

[*.{html,htm}]
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.xml]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.{css,js}]
indent_size = 2
indent_style = space
